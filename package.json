{
  "name": "icecast-sdk-js",
  "version": "1.0.20",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "author": "Max Stein <maxwell.stein@gmail.com> (https://maxstein.net",
  "license": "MIT",
  "description": "NodeJS / Typescript SDK for Icecast APIs",
  "keywords": [
    "icecast",
    "radio",
    "streaming",
    "sdk",
    "api",
    "typescript"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build-clean && npm run build-esm && npm run build-cjs",
    "build-clean": "rm -rf dist",
    "build-esm": "tsc --project ./tsconfig.build.json",
    "build-cjs": "rollup dist/index.js --file dist/index.cjs --format cjs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepublish": "npm run lint && npm run build",
    "release": "npm run lint && npm run build && bumpp && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mxwllstn/icecast-sdk-js"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/node": "^22.15.14",
    "bumpp": "^10.1.0",
    "eslint": "^9.26.0",
    "globals": "^16.0.0",
    "lint-staged": "^15.5.2",
    "rollup": "^4.40.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.3.0+sha512.ee7b93e0c2bd11409c6424f92b866f31d3ea1bef5fbe47d3c7500cdc3c9668833d2e55681ad66df5b640c61fa9dc25d546efa54d76d7f8bf54b13614ac293631"
}
